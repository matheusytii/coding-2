vogais = [ 'a', 'e', 'i', 'o', 'u', 'A','E', 'I', 'O' 'U' ]

letra = (input("digite uma letra:  "))
if letra in vogais:
    print(letra, 'é uma vogal')
else:
    print("essa letra é consoante")



telefone = float(input('digite o valor do produto:'))
fone = float(input('digite o valor do segundo:'))
capa_telefone = float(input('digite o valor do  terceiro produto:'))

if telefone < fone and telefone < capa_telefone:
  print("o telefone é mais barato")
elif fone < telefone and fone < capa_telefone:
  print("o fone é mais barato")
elif capa_telefone < fone and capa_telefone < telefone:
  print("A capa é mais barata")



#Ler três números e mostrá-los em ordem decrescente:
num1 = input("Digite o primeiro número: ")
num2 = input("Digite o segundo número: ")
num3 = input("Digite o terceiro número: ")
 
# Verificar o maior, do mei e menor número
if num1 > num2 and num1 > num3:
    maior = num1
    if num2 > num3:
        medio = num2
        menor = num3
    else:
        medio = num3
        menor = num2
elif num2 > num1 and num2 > num3:
    maior = num2
    if num1 > num3:
        medio = num1
        menor = num3
    else:
        medio = num3
        menor = num1
else:
    maior = num3
    if num1 > num2:
        medio = num1
        menor = num2
    else:
        medio = num2
        menor = num1
 
print(f"Os números em ordem decrescente são: {maior}, {medio}, {menor}")





print(f"Os números em ordem decrescente são: {maior}, {medio}, {menor}")

turno_de_estudo = str (input ('DIGITE  M (MATUTINO), V (VESPETINO) OU N (NOTURNO):'))
 
if turno_de_estudo == 'M':
    print ('Bom dia!')
if turno_de_estudo == 'V':
    print ('Boa tarde!')
if turno_de_estudo == 'N':
    print ('Boa noite!')
else:
    print ('Esse turno não existe!!!')
